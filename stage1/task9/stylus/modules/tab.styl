panel(width, height)
  box-sizing border-box
  height height
  width width
  background #fff
  border-radius 5px
  border: 1px solid #ced1d4
  margin 10px 0

  h3
    height 41px
    width: 100%;
    border-bottom: 1px solid #e7e8eb
    background: #f4f5f6
    line-height: 40px
    padding: 0 0 0 20px
    margin 0px
    box-sizing: border-box
    color: #aaa
    font-size 12px

  .content
    margin 10px 20px

dropbox(dropdown = true)
  div
    @extend .justify
    text-align center
    width (100 / 5) %
    &:nth-of-type(3)
      width (100 / 4)%
    border 1px solid #cacbcb
    line-height 20px
    //padding-left 3 px

    span
      width 100%

    &:hover
      cursor pointer

    //&:nth-of-type(2)
      //f

    i
      width 20px
      height 20px
      border-left 1px solid #f5f6f7
      background url(../imgs/select_down.png) no-repeat center
