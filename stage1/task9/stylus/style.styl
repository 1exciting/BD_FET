@require 'modules/tab.styl'
@require 'vars.styl'

body
  margin 0px
  font-size 12px
  font-family: "SimHei", "Microsoft Yahei", "Arial"
  padding: 0px
  width 1280px

/*
 * first part : song
*/
header#page {
  font-family "SimHei", "Microsoft Yahei", "Arial"
  background #2189bf
  width 100%
  height 56px
  position relative
  .header-left {
    background-image url("../imgs/logo.png")
    width 36px
    height 36px
    margin-left 50px
    display inline-block
    margin-top 10px
    &:hover {
      cursor pointer
    }
  }
  .header-right {
    display inline-block
    height 30px
    width 378px
    position absolute
    right 93px
    margin-top 13px
    input {
      width 270px
      height 26px
      background: #fff url("../imgs/zoom.png") no-repeat 17px 6px;
      border-radius 20px
      line-height 30px
      padding-left 40px
      outline none
      //border
    }
    span {
      background: url("../imgs/login.png") no-repeat;
      padding-left 20px
      color white
      &:hover {
        cursor pointer
      }
    }
  }
}

section#song {
  font-family "SimHei", "Microsoft Yahei", "Arial"
  width 100%
  height 1210px
  .left-menu {
    width 260px
    height 100%
    background #2a2e3d
    float left
  }
  .main {
    width 1020px
    height 100%
    background #eeeeed
    float left
    .main-header {
      height 30px
      background #fff
      padding-left 30px
      a {
        text-decoration none
        color #b5b5b5
        line-height 30px
        padding-right 10px
        &:last-child {
          color #729fc6
        }
      }
    }
    .main-body {
      width 890px
      margin 0 auto
      margin-top 20px
      .search-item {
        background white
        color #b0b0b0
        .si-1 {
          height 60px
          padding 10px 0 10px 30px
          display inline-block
          select {
            outline none
            margin-left 5px
          }
        }
      }
    }
  }
}

/*
 * second part here
*/
.history-search
  display flex
  height 65px
  margin-bottom 10px
  .hs-price
    display flex
    .price-info
      li
        display inline-block;
        width 80px;
        text-align center;
        cursor pointer;

.tab-flex
  display flex
  justify-content space-between
  flex-wrap wrap

section#project1-1
  panel(532px, 360px)

/*
 * third part here
*/

section#project1-2
  panel 352px, 360px

section#cal
  panel(352px, 360px)

  .content .dropdown
    @extend .justify
    dropbox true

  .content header
    margin-top 10px

  .content header ul
    @extend .justify
    padding 0
    border-bottom 1px solid #ececed
    border-top 1px solid #a9cfec
    line-height 30px

    li
      list-style none
      text-align center
      width (100 / 7) %

  .content .day
    @extend .justify
    flex-wrap wrap

    p
      text-align center
      box-sizing border-box
      line-height 20px
      width (100 / 7) %
      //width @w - 1px
      border 1px solid #fff
      margin 1px 0
      display flex
      flex-direction column

      &.make
        @extend .yellow-border

      &:hover
        @extend .yellow-border

      &:nth-of-type(7n-1), &:nth-of-type(7n)
        span
          color #cd3539

section#brand
  panel(532px, 360px)

  table
    width 90%
    margin 0 auto

    tr, th
      @extend .text-normal

    tbody
      tr
        &:hover
          background-color #eee

        td
          &:nth-child(1)
            width 66px

          &:nth-child(2)
            width 66px

          &:nth-child(3)
            padding-left 35px

            div
              display inline-block
