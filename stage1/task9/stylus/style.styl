@require 'modules/tab.styl'
@require 'vars.styl'

body
  margin 0px
  font-size 12px
  font-family: "SimHei", "Microsoft Yahei", "Arial"
  padding: 0px
  width 1280px

/*
 * first part : song
*/
header#page {
  font-family "SimHei", "Microsoft Yahei", "Arial"
  background #2189bf
  width 100%
  height 56px
  position relative
  .header-left {
    background-image url("../imgs/logo.png")
    width 36px
    height 36px
    margin-left 50px
    display inline-block
    margin-top 10px
    &:hover {
      cursor pointer
    }
  }
  .header-right {
    display inline-block
    height 30px
    width 378px
    position absolute
    right 93px
    margin-top 13px
    input {
      width 270px
      height 26px
      background: #fff url("../imgs/zoom.png") no-repeat 17px 6px;
      border-radius 20px
      line-height 30px
      padding-left 40px
      outline none
      //border
    }
    span {
      background: url("../imgs/login.png") no-repeat;
      padding-left 20px
      color white
      &:hover {
        cursor pointer
      }
    }
  }
}

section#song {
  font-family "SimHei", "Microsoft Yahei", "Arial"
  width 100%
  height 1210px
  .left-menu {
    width 260px
    height 100%
    background #2a2e3d
    float left
  }
  .main {
    width 1020px
    height 100%
    background #eeeeed
    float left
    .main-header {
      height 30px
      background #fff
      padding-left 30px
      a {
        text-decoration none
        color #b5b5b5
        line-height 30px
        padding-right 10px
        &:last-child {
          color #729fc6
        }
      }
    }
    .main-body {
      width 890px
      margin 0 auto
      margin-top 20px
      .search-item {
        background white
        color #b0b0b0
        .si-1 {
          height 60px
          padding 10px 0 10px 30px
          display inline-block
          select {
            outline none
            margin-left 5px
          }
        }
      }
    }
  }
}

/*
 * second part here
*/
.history-search
  height 65px
  width 100%
  margin-top 20px

  .hs-price
    display flex

    .flex-w1
      flex 1

    .flex-w2
      flex 4  

    .line-info
      -moz-transition all 0s ease
      -o-transition all 0s ease
      -webkit-transition all 0s ease
      transition all 0s ease
      text-align center
      border-top 5px solid #ffffff
      
      time
        padding-top 10px
        display block
        height 20px
        font-size 1.2em
      div
        color #aaa
        font-size: 2em
      div span
        color: #ed7326
    .line-info.selected, .line-info:hover
      border-top 5px solid #2189bf

    .lr
      line-height 65px
      text-align center
    .lr:hover
      background-color #f4f5f6

    [class*='flex-']
      background-color #fff
      margin-right 10px
      box-shadow 0 0 5px #ababab
      text-align center
      .s-size
        color #aaa
        font-size 2em
    .history-info
      font-size 1.2em
      span
        line-height 65px
        padding-left 20px
        display block
        background #fff url(../imgs/history.png) no-repeat 2px 17px;

    [class*='flex-']:hover
      cursor pointer

    [class*='flex-']:last-child
      margin-right 0

.counts
  width 100%
  height 88px
  margin-top 30px
  margin-bottom 10px
  >p
    color #333
    font-size 1.2em
    margin 4px 0
  .count-list
    display flex
    height 64px

    .green
        border-left 4px solid #44b29e
        .count-rect
          background #44b29e
    .blue
        border-left 4px solid #388ac1
        .count-rect
          background #388ac1
    .red
        border-left 4px solid #d04a36
        .count-rect
          background #d04a36
    .yellow
        border-left 4px solid #e2cd46
        .count-rect
          background #e2cd46
    .flex-count-1
      flex 1
      background-color #fff
      margin-right 30px
      box-shadow 0 0 5px #ababab
      padding-left 10px
      position relative
      padding-top 16px
      line-height 1.6em
        
      .pcolor
        color #aaaaaa
      
      &:last-child
        margin-right 0
      
      .count-rect
        position absolute
        width 60px
        height 46px
        top 10px
        right 10px

