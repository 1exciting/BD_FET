 */
.tab-flex
  display flex
  justify-content space-between
  flex-wrap wrap

section#project1-1
  panel(532px, 360px)

  .project1-1-tabs
    list-style-type none
    height 28px
    padding-left 0px
    position relative

    input,div
      display none

    >li
      display inline-block

    label  
      cursor pointer
      display block
      width 86px
      text-align center
      line-height 27px
      background-color #ededf0
      border 1px solid #ededf0
      border-radius 5px 5px 0 0
      color #535353

    [id^='tab']:checked~label
      position relative
      z-index 1
      border 1px solid #cacbcb
      border-bottom none
      background #fff
      height 29px

    [id^='tab']:checked~[id^='tab-meun']
      display block
      border 1px solid #cacbcb
      position absolute
      width 426px
      padding 22px 34px 22px 30px
      border-radius 0 5px 5px
      left 0
      top 29px

    table
      width 100%
      border-collapse collapse
      text-align center
      line-height 30px
      color #636363
      border 1px solid #ddd

/*
 * third part here
*/
section#project1-2
  panel 352px, 360px
  div.content
    height 270px
    display flex
    justify-content center
    align-items center
    font-size 20px

section#cal
  panel(352px, 360px)

  .content .dropdown
    @extend .justify
    dropbox true

  .content header
    margin-top 10px

  .content header ul
    @extend .justify
    padding 0
    border-bottom 1px solid #ececed
    border-top 1px solid #a9cfec
    line-height 30px

    li
      list-style none
      text-align center
      width (100 / 7) %

  .content .day
    @extend .justify
    flex-wrap wrap

    p
      text-align center
      box-sizing border-box
      line-height 20px
      width (100 / 7) %
      //width @w - 1px
      border 1px solid #fff
      margin 1px 0
      display flex
      flex-direction column

      &.make
        @extend .yellow-border

      &:hover
        @extend .yellow-border

      &:nth-of-type(7n-1), &:nth-of-type(7n)
        span
          color #cd3539

section#brand
  panel(532px, 360px)

  table
    width 90%
    margin 0 auto

    tr, th
      @extend .text-normal

    tbody
      tr
        &:hover
          background-color #eee

        td
          &:nth-child(1)
            width 66px

          &:nth-child(2)
            width 66px

          &:nth-child(3)
            padding-left 35px

            div
              display inline-block
